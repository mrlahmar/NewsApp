<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/pad10dp"
        android:paddingLeft="@dimen/pad10dp"
        android:paddingEnd="@dimen/pad10dp"
        android:paddingTop="@dimen/pad5dp"
        android:paddingBottom="@dimen/pad5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="start"
            android:textSize="@dimen/text_size"
            tools:text="Technology"
            android:fontFamily="@font/rotterind"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:textSize="@dimen/text_size3"
            android:gravity="center"
            android:layout_marginBottom="@dimen/marg9dp"
            android:layout_marginTop="@dimen/marg6dp"
            android:fontFamily="@font/rotterind"
            tools:text="Microsoft to acquire Github" />

        <TextView
            android:id="@+id/writer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="end"
            android:textSize="@dimen/text_size"
            android:fontFamily="@font/rotterind"
            tools:text="By Alaa Lahmar" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height2"
            android:gravity="end"
            android:textSize="@dimen/text_size2"
            android:fontFamily="@font/rotterind"
            tools:text="On 07/07/2018"
            android:textColor="@color/colorForDate"/>


    </LinearLayout>

</LinearLayout>